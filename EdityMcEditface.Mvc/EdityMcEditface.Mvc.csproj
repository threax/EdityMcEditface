<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>EdityMcEditface.Mvc</AssemblyName>
    <PackageId>EdityMcEditface.Mvc</PackageId>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <Version>13.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/threax/EdityMcEditface</PackageProjectUrl>
    <RepositoryUrl>https://github.com/threax/EdityMcEditface</RepositoryUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/threax/Threax.AspNetCore.Hypermedia/master/LICENSE</PackageLicenseUrl>
    <Description>The mvc portion of Edity McEditface.</Description>
    <Authors>Andrew Piper</Authors>
    <PackageReleaseNotes>Updated client gen to latest version. Requires latest halcyon client.</PackageReleaseNotes>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\EdityMcEditface.HtmlRenderer\EdityMcEditface.HtmlRenderer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="7.0.1" />
    <PackageReference Include="LibGit2Sharp.Portable" Version="0.24.10" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.1.0" />
    <PackageReference Include="System.Diagnostics.Process" Version="4.3.0" />
    <PackageReference Include="Threax.AspNetCore.AuthCore" Version="2.0.3" />
    <PackageReference Include="Threax.AspNetCore.BuiltInTools" Version="5.1.0" />
    <PackageReference Include="Threax.AspNetCore.ExceptionFilter" Version="5.0.3" />
    <PackageReference Include="Threax.AspNetCore.FileRepository" Version="3.0.1" />
    <PackageReference Include="Threax.AspNetCore.Halcyon.ClientGen" Version="11.0.0" />
    <PackageReference Include="Threax.AspNetCore.Halcyon.ClientGen.Tools" Version="5.0.0" />
    <PackageReference Include="Threax.AspNetCore.Halcyon.Ext" Version="12.5.0" />
    <PackageReference Include="Threax.AspNetCore.Models" Version="6.2.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-63127-02" PrivateAssets="All" />
  </ItemGroup>

</Project>
