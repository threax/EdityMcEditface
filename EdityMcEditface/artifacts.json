[
  {
    "outDir": "lib",
    "typescript": {
      "compile": true,
      "shakeModules": {
        "runners": [ "hr.runattributes", "edity.theme.layouts.default" ],
        "outFile": "tsbin.prod.js"
      }
    }
  },
  {
    "outDir": "lib/bootstrap/dist/css",
    "less": {
      "importPaths": [ ".", "node_modules/bootstrap/less" ],
      "input": "bootstrap/bootstrap-custom.less",
      "compress": true,
      "basePath": "bootstrap"
    }
  },
  {
    "outDir": "lib/bootstrap/dist/fonts",
    "pathBase": "node_modules/bootstrap/dist/fonts",
    "copy": [
      "node_modules/bootstrap/dist/fonts/**/*"
    ]
  },
  {
    "outDir": "edity/layouts",
    "pathBase": "Views",
    "copy": [
      "Views/**/*.css",
      "Views/**/*.html",
      "Views/**/*.json"
    ],
    "less": {
      "importPaths": [ "../bootstrap/less" ],
      "input": "Views/**/*.less",
      "compress": true
    }
  },
  {
    "outDir": "edity/Templates",
    "pathBase": "Templates",
    "copy": [
      "Templates/**/*.css",
      "Templates/**/*.html",
      "Templates/**/*.json"
    ],
    "less": {
      "importPaths": [ "../bootstrap/less" ],
      "input": "Templates/**/*.less",
      "compress": true
    }
  },
  {
    "outDir": "edity",
    "copy": [
      "edity.json"
    ]
  }
]