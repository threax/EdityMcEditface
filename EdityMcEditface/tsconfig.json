{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "tscout/lib",
    "module": "amd",
    "baseUrl": ".",
    "paths": {
      "hr.*": [
        "node_modules/HtmlRapier/src/*",
        "node_modules/htmlrapier.json-editor/*"
      ],
      "hr.widgets.*": [
        "node_modules/HtmlRapier.Widgets/src/*"
      ],
      "hr.bootstrap.*": [
        "node_modules/HtmlRapier.Bootstrap/lib/*",
        "node_modules/HtmlRapier.Bootstrap/*"
      ],
      "edity.*": [
        "custom_components/edity/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "compileOnSave": true
}
