{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": "obj/tscout/lib",
    "outFile": "ClientBin/Site/lib/tsbin.js",
    "module": "amd",
    "baseUrl": ".",
    "paths": {
      "hr.*": [
        "node_modules/HtmlRapier/src/*"
      ],
      "hr.bootstrap.*": [
        "node_modules/HtmlRapier.Bootstrap/lib/*",
        "node_modules/HtmlRapier.Bootstrap/*"
      ],
      "hr.treemenu.*": [
        "node_modules/HtmlRapier.TreeMenu/src/*"
      ]
    }
  },
  "include": [
    "node_modules/HtmlRapier/src/*",
    "node_modules/HtmlRapier.TreeMenu/src/*",
    "node_modules/HtmlRapier.Bootstrap/lib/*",
    "node_modules/HtmlRapier.Bootstrap/*"
  ],
  "exclude": [
    "./**/*.js",
    "./**/Build/*.ts",
    "node_modules/jsns",
    "node_modules/editymceditface.client/*",
    "wwwroot",
    "Client/SwaggerGen/*"
  ],
  "files": [
    "node_modules/jsns/jsns.ts",
    "node_modules/htmlrapier/src/polyfill.js"
  ],
  "compileOnSave": true
}
