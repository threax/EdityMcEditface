{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "wwwroot/lib",
    "module": "amd",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "custom_components/HtmlRapier/src/*",
        "custom_components/HtmlRapierWidgets/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "compileOnSave": true
}
